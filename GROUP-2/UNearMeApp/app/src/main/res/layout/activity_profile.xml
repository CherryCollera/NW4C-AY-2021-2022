<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:id="@+id/rootLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_black"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="#3195DA"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/display_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="asdfasdf"
                android:focusableInTouchMode="false"
                android:hint="First name"/>
            <EditText
                android:id="@+id/display_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="asdfasdf"
                android:focusableInTouchMode="false"
                android:hint="Last name"/>

            <EditText
                android:id="@+id/display_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:focusableInTouchMode="false"
                android:text="asdfasdf"
                android:hint="Email"/>
            <Button
                android:id="@+id/btn_editProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:fontFamily="@font/muli_italic"/>

            <LinearLayout
                android:id="@+id/cancel_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/enter_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_bold"
                    android:inputType="textPassword"
                    app:endIconMode="password_toggle"
                    android:hint="Enter your password"/>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:fontFamily="@font/muli_italic"
                        android:layout_marginEnd="10dp"/>

                    <Button
                        android:id="@+id/btn_updateProfile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:fontFamily="@font/muli_italic"
                        android:layout_marginStart="10dp"/>


                </LinearLayout>
            </LinearLayout>



<!--            <Button-->
<!--                android:id="@+id/reg_btn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Take Career Path Exam"-->
<!--                android:textAllCaps="false"-->
<!--                android:fontFamily="@font/muli_italic"-->
<!--                android:layout_marginTop="50dp"/>-->


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>