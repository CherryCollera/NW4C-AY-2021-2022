<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clouds"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/filtered_school_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/filtered_school_logo"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/filtered_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bataan Penincsula State University Main campus"
                android:textSize="16sp"
                android:transitionName="name" />

            <TextView
                android:id="@+id/filtered_school_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cost"
                android:transitionName="name" />

        </LinearLayout>


    </RelativeLayout>




</androidx.cardview.widget.CardView>